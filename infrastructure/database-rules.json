{
  "rules": {
    ".read": false,
    ".write": false,
    "presence": {
      ".read": true,
      "$userId": {
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "users": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid == $uid",
        "displayName": {
           ".validate": "newData.isString() || newData.val() === null"
        },
        "createdAt": {
           ".validate": "newData.isNumber() || newData.isString() || newData.val() === null"
        },
        "avatarUrl": {
          ".validate": "newData.isString() || newData.val() === null"
        },
        "avatarSession": {
          ".validate": "newData.isBoolean() || newData.val() === null"
        }
      }
    },
    "userRooms": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        ".validate": "newData.isString() || newData.val() === null"
      }
    },
    "focusRooms": {
      ".read": true,
      "$roomId": {
        ".write": "auth != null",
        ".validate": "!newData.exists() || newData.hasChildren(['id', 'createdBy']) || (!newData.child('id').exists() && !newData.child('createdBy').exists())", 
        
        "id": { ".validate": "newData.isString()" },
        "name": { ".validate": "newData.isString() && newData.val().length > 0" },
        "description": { ".validate": "newData.isString() || newData.val() === null" },
        
        "tag": { ".validate": "newData.isString() || newData.val() === null" },

        "template": { ".validate": "newData.isString() || newData.val() === null" },
        "createdBy": { ".validate": "newData.isString()" },
        "creatorName": { ".validate": "newData.isString() || newData.val() === null" },
        "createdAt": { ".validate": "newData.isString() || newData.isNumber() || newData.val() === null" },
        
        "maxParticipants": { ".validate": "newData.isNumber() && newData.val() > 0" },
        "duration": { ".validate": "newData.isNumber() && newData.val() > 0" },
        "goal": { ".validate": "newData.isString() || newData.val() === null" },
        "breakDuration": { ".validate": "newData.isNumber() || newData.val() === null" },
        "cycles": { ".validate": "newData.isNumber() || newData.val() === null" },
        "status": { ".validate": "newData.isString() || newData.val() === null" },
        "completedCycles": { ".validate": "newData.isNumber() || newData.val() === null" },
        "scheduledFor": { ".validate": "newData.isNumber() || newData.val() === null" },
        "emptyRoomRemovalDelaySec": { ".validate": "newData.isNumber() || newData.val() === null" },
        "timerStartedAt": { ".validate": "newData.isNumber() || newData.val() === null" },
        "timerEndsAt": { ".validate": "newData.isNumber() || newData.val() === null" },
        "isPublic": { ".validate": "newData.isBoolean() || newData.val() === null" },
        "participants": {
          "$userId": {
            ".write": "auth != null",
            ".validate": "newData.hasChildren(['joinedAt', 'displayName']) || newData.val() === null"
          }
        },
        "messages": {
          "$messageId": {
            ".write": "auth != null",
            ".validate": "newData.hasChildren(['userId', 'text', 'timestamp']) || newData.val() === null"
          }
        },
        "timer": {
          ".write": "auth != null"
        },
        "completed": {
          ".write": "auth != null",
          ".validate": "newData.isBoolean() || newData.val() === null"
        }
      }
    },
    "timers": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "notifications": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    }
  }
}