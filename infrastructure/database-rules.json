{
  "rules": {
    ".read": false,
    ".write": false,
    "presence": {
      ".read": true,
      "$userId": {
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "avatarUrl": {
          ".validate": "newData.isString() || newData.val() === null"
        },
        "avatarSession": {
          ".validate": "newData.isBoolean() || newData.val() === null"
        }
      }
    },
    "userRooms": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        ".validate": "newData.isString() || newData.val() === null"
      }
    },
    "focusRooms": {
      ".read": true,
      "$roomId": {
        ".write": "auth != null",
        ".validate": "newData.child('createdBy').val() === auth.uid || newData.val() === null",
        "id": { ".validate": "newData.isString()" },
        "name": { ".validate": "newData.isString() && newData.val().length > 0" },
        "description": { ".validate": "newData.isString() || newData.val() === null" },
        "tag": { ".validate": "newData.isString() && (newData.val() === 'work' || newData.val() === 'study' || newData.val() === 'creative' || newData.val() === 'fitness' || newData.val() === 'wellness' || newData.val() === 'other')" },
        "template": { ".validate": "newData.isString() || newData.val() === null" },
        "createdBy": { ".validate": "newData.isString()" },
        "creatorName": { ".validate": "newData.isString() || newData.val() === null" },
        "createdAt": { ".validate": "newData.isString() || newData.val() === null" },
        "maxParticipants": { ".validate": "newData.isNumber() && newData.val() > 0" },
        "duration": { ".validate": "newData.isNumber() && newData.val() > 0" },
        "goal": { ".validate": "newData.isString() || newData.val() === null" },
        "breakDuration": { ".validate": "newData.isNumber() || newData.val() === null" },
        "cycles": { ".validate": "newData.isNumber() || newData.val() === null" },
        "status": { ".validate": "newData.isString() && (newData.val() === 'waiting' || newData.val() === 'in-progress' || newData.val() === 'completed')" },
        "completedCycles": { ".validate": "newData.isNumber() || newData.val() === null" },
        "participants": {
          "$userId": {
            ".write": "auth != null && (auth.uid == $userId || root.child('focusRooms').child($roomId).child('createdBy').val() === auth.uid)",
            ".validate": "newData.hasChildren(['joinedAt', 'displayName']) || newData.val() === null"
          }
        },
        "messages": {
          "$messageId": {
            ".write": "auth != null",
            ".validate": "newData.hasChildren(['userId', 'text', 'timestamp']) || newData.val() === null"
          }
        },
        "timer": {
          ".write": "auth != null"
        },
        "completed": {
          ".write": "auth != null && root.child('focusRooms').child($roomId).child('createdBy').val() === auth.uid",
          ".validate": "newData.isBoolean() || newData.val() === null"
        }
      }
    },
    "timers": {
      "$userId": {
        ".read": "auth != null && (auth.uid == $userId || root.child('timers').child($userId).child('isPublic').val() === true)",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "notifications": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    }
  }
}